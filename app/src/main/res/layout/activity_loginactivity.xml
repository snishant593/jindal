<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".loginactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20.0"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/jindal"
                android:layout_weight="20.0"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/usernameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_weight="8.0"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:paddingTop="60dp"
        android:layout_marginEnd="8dp"

        >


        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittextbackground"
            android:textStyle="normal"
            android:layout_weight="8.0"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person_outline_black_18dp"
            android:id="@+id/editText"
            android:hint="User Name"
            android:textSize="20dp"
            android:drawablePadding="8dip"
            android:ellipsize="start"

            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordWrapper"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="8.0"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameWrapper"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:layout_alignLeft="@+id/passwordWrapper"
        android:layout_alignStart="@+id/passwordWrapper"
        >
        >


        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:id="@+id/txtPassword"
            android:layout_weight="8.0"
            android:textStyle="normal"
            android:background="@drawable/edittextbackground"
            android:drawableLeft="@drawable/ic_vpn_key_black_18dp"
            android:hint="Password"
            android:textSize="20dp"
            android:drawablePadding="8dip"

            android:layout_gravity="center"

            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"


        android:layout_weight="5.0">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_weight="5.0"
            android:id="@+id/login"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/passwordWrapper"
            android:layout_marginTop="25dp"
            android:background="#64DD17"
            />
    </LinearLayout>
</LinearLayout>
